body {background-color: #191919;}

#container {
	overflow: auto;
	background: #191919;
}
#main {
	width: 960px;
	margin: 0 auto;
	padding: 15px 0 50px 0;
}
#left-col {
	position: relative;
	float: left;
	width: 685px;
}
#left-col p {
margin-top: 0;
}
#left-first {
	background: #333 url("<%= asset_path("pages/navbar-bg.png") %>") repeat-x;
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	border-radius: 6px;
	-webkit-box-shadow: 0px 0px 10px 5px #111;
	-moz-box-shadow: 0px 0px 10px 5px #111;
	box-shadow: 0px 0px 10px 5px #111;
}
#left-rest {
	background: #333;
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	border-radius: 6px;
	-webkit-box-shadow: 0px 0px 10px 5px #111;
	-moz-box-shadow: 0px 0px 10px 5px #111;
	box-shadow: 0px 0px 10px 5px #111;
	margin-bottom: 60px;
}
#right-col {
	position: relative;
	float: right;
	width: 240px;
	margin-bottom: 20px;
	background: url("<%= asset_path("pages/metal-bg.png") %>") repeat;
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	border-radius: 6px;
	-webkit-box-shadow: 0px 0px 10px 5px #111;
	-moz-box-shadow: 0px 0px 10px 5px #111;
	box-shadow: 0px 0px 10px 5px #111;
}
#right-red-heading {
	height: 35px;
	background: url("<%= asset_path("pages/navbar-bg.png") %>") repeat-x;
	-webkit-border-top-left-radius: 6px;
	-webkit-border-top-right-radius: 6px;
	-moz-border-radius-topleft: 6px;
	-moz-border-radius-topright: 6px;
	border-top-left-radius: 6px;
	border-top-right-radius: 6px;
}
#instructor-photo {
	width: 240px;
	height: 190px;
	display: block;
	position: relative;
	float: left;
	margin: 30px -8px -20px -3px;
	background: url("<%= asset_path("pages/instructor-photo.png") %>") no-repeat;
}
#left-first h1, #left-rest h1 {
	color: #fff;
	font: 26px Myriad Pro, Helvetica Neue, Arial, Sans-Serif;
}
#left-rest h2 {
	width: 685px;
	display: block;
	text-align: center;
	position: relative;
	float: left;
	margin: 15px 0 0 0px;
}
#instructor-name {
	width: 440px;
	display: block;
	text-align: center;
	position: relative;
	float: left;
	margin: 25px 0 0 0px;
	text-shadow: #000 0px 6px 4px;
}
#left-first p, #left-rest p {
	font: 14px Myriad Pro, Helvetica Neue, Arial, Sans-Serif;
	color: #fff;
	line-height: 26px;
	padding: 0 10px 10px 10px;
}
#right-col p {
	font: 14px Myriad Pro, Helvetica Neue, Arial, Sans-Serif;
	color: #fff;
	line-height: 26px;
	text-shadow: #000 0px 6px 4px;
	padding: 0 15px 10px 15px;
}

.rest-pages {
	padding: 25px 10px;
}
